<Window x:Class="BookingProject.View.CreateTourRequestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingProject.View"
        mc:Ignorable="d"
        Title="CreateTourRequestView" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="434.04"></RowDefinition>
            <RowDefinition Height="0*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Margin="150,23,150,87">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Height="30" Content="City"></Label>
            <Label Grid.Row="1" Grid.Column="0" Height="30" Content="Country"></Label>
            <Label Grid.Row="2" Grid.Column="0" Height="30" Content="Description"></Label>
            <Label Grid.Row="3" Grid.Column="0" Height="30" Content="Langugage"></Label>
            <Label Grid.Row="4" Grid.Column="0" Height="30" Content="Number of guests"></Label>
            <Label Grid.Row="5" Grid.Column="0" Height="30" Content="Start date"></Label>
            <Label Grid.Row="6" Grid.Column="0" Height="30" Content="End date"></Label>

            <TextBox x:Name="txtCity" Grid.Row="0" Grid.Column="1" Text="{Binding Path=City, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                     Height="25"></TextBox>

            <TextBox x:Name="txtCountry" Grid.Row="1" Grid.Column="1" Text="{Binding Path=Country, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                     Height="25"></TextBox>

            <TextBox x:Name="txtDescription" Grid.Row="2" Grid.Column="1" Text="{Binding Path=Description, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                     Height="25"></TextBox>

            <ComboBox Height="25" Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Path=Languages}" SelectedItem="{Binding Path=ChosenLanguage, UpdateSourceTrigger=PropertyChanged}"></ComboBox>

            <TextBox x:Name="txtGuestsNumber" Grid.Row="4" Grid.Column="1" Text="{Binding Path=GuestsNumber, UpdateSourceTrigger=PropertyChanged}"                  
                     Height="25"></TextBox>

            <DatePicker x:Name="datePickerStartDate" Grid.Row="5" Grid.Column="1" SelectedDate="{Binding Path=StartDate, UpdateSourceTrigger=PropertyChanged}" Height="25" 
                SelectedDateFormat="Long" DisplayDateStart="{x:Static sys:DateTime.Today}" />

            <DatePicker x:Name="datePickerEndDate" Grid.Row="6" Grid.Column="1" SelectedDate="{Binding Path=EndDate, UpdateSourceTrigger=PropertyChanged}" Height="25" 
                SelectedDateFormat="Long" DisplayDateStart="{x:Static sys:DateTime.Today}" />
        </Grid>
        <Grid>
            <Button Content="Cancel" IsCancel="True" Click="Button_Click_Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="400,374,0,0" RenderTransformOrigin="0.471,0.663"/>
            <Button Content="Create" IsDefault="True" Click="Button_Click_CreateTourRequest"  HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.467,0.393" Height="20" Margin="278,374,0,0"/>
        </Grid>
    </Grid>
</Window>